<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorHint</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeStyle">@style/CustomActionModeStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <!-- Assign dialog style here. -->
        <item name="alertDialogTheme">@style/MyAlertDialogStyle</item>
        <item name="alertDialogStyle">@style/MyAlertDialogStyle</item>
    </style>


    <style name="AppTheme.Main" parent="AppTheme">
        <item name="android:statusBarColor">#0081F0</item>

    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:statusBarColor">@color/colorBackground</item>

    </style>

    <style name="AppTheme.Intro" parent="AppTheme">
        <item name="android:statusBarColor">#e2e2e2</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    </style>

    <!-- Dialog -->
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/ui_bg</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyAlertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyAlertDialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/MyAlertDialogButtonStyle</item>
    </style>

    <style name="MyAlertDialogButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="MyDialogFadeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/TitleBarTextColor</item>
        <item name="android:background">@color/ui_white</item>
    </style>

    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ui_black</item>
    </style>

    <style name="CustomActionModeStyle" parent="Base.Widget.AppCompat.ActionMode">
        <item name="background">@color/ui_white</item>
    </style>

    <style name="CustomToolbarTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/ui_black</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#272727</item>
        <item name="colorPrimaryDark">#272727</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="textColorDL">@color/colorTextDark</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <!--        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorPrimary</item>-->
        <!--        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>-->
    </style>


    <style name="AppTheme.NoActionBar2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff554d</item>
        <item name="colorPrimaryDark">#ff554d</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
        <item name="textColorDL">@color/colorTextDark</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <!--        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorPrimary</item>-->
        <!--        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>-->
    </style>



    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <!--<item name="tabBackground">@drawable/bg_list_item_selector</item>-->

        <item name="colorPrimary">@color/colorHighlight</item>
        <item name="colorPrimaryDark">@color/colorTextLight</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <!--<item name="android:textColor">@color/selector_main_tab_text_color</item>-->
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="AppTheme.ProgressBar">
        <item name="colorAccent">#000000</item>
    </style>

    <style name="AppTheme.ProgressBar2">
        <item name="colorAccent">@color/colorTextSplash</item>
    </style>

    <style name="AppTheme.SearchView">
        <!--        <item name="colorPrimary">@color/colorHint</item>-->
        <!--        <item name="colorPrimaryDark">@color/colorHint</item>-->
    </style>


    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/colorTextSplash</item> <!-- Whatever color you want-->
    </style>


    <style name="AppTheme.CustomAlertDialog" >
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg_item_main_tran</item>
    </style>

    <style name="CustomPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <!--        <item name="android:textColor">#F00</item>-->
        <!--        <item name="backgroundTint">#00F</item>-->
    </style>


    <style name="ExampleText" parent="TextAppearance.AppCompat">
        <!--&lt;!&ndash;        <item name="android:gravity">center_horizontal</item>&ndash;&gt;-->
        <!--        <item name="android:layout_marginStart">@dimen/margin_normal</item>-->
        <!--        <item name="android:layout_marginLeft">@dimen/margin_normal</item>-->
        <!--        <item name="android:layout_marginEnd">@dimen/margin_normal</item>-->
        <!--        <item name="android:layout_marginRight">@dimen/margin_normal</item>-->
        <!--        <item name="android:layout_marginBottom">@dimen/margin_normal</item>-->
        <!--        <item name="android:layout_marginTop">@dimen/margin_normal</item>-->
    </style>

















      <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDarkDarkMod</item>
        <item name="colorPrimaryDark">@color/colorAccentDarkMod</item>
        <item name="colorAccent">@color/colorA</item>
        <item name="android:textColor">@color/colorText</item>
    </style>


    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">#ffffff</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>
    <style name="mySpinnerItemStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/my_spinner_text_color</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="SCBSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <!-- active thumb & track color (30% transparency) #46bdbf-->
        <item name="colorControlActivated">#FFC107</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) #42221f1f-->
        <item name="android:colorForeground">#137DE9</item>
    </style>

    <style name="MyProgressBar" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorA</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.Holo.ProgressBar">
        <item name="android:textColor">#FFFFFF</item>

    </style>

    <style name="AppTheme.AppBarOverlayDark">
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.PopupOverlay"></style>


    <color name="my_spinner_text_color">#ffffff</color>

    <style name="CustomDialog" parent="@style/ThemeOverlay.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@drawable/background</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>
